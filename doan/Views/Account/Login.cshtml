@model doan.Models.ViewModel.LoginVM
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .acountbtn {
        width: 275px;
        height: 40px;
        border: 1px solid #808080;
        margin: 5px;
        align-items: center;
    }
</style>



<!DOCTYPE html>
<div>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h2 class="col-md-6" style="text-align:center;">Đăng nhập</h2>
        </div>
        @* Tên đăng nhập *@
        <div class="form-group">
            @Html.LabelFor(m => m.Username, new { @class = "control-lable col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>
        </div>
        @* Mật Khẩu *@
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-lable col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" value="Đăng nhập" class="btn btn-info accountbtn" /><br />
                <p>Bạn đã có tài khoản ? <a href="@Url.Action("Register","Account",null)" />Đăng kí ngay</p>
            </div>
        </div>
    }

</div>
