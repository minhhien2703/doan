@model doan.Models.ViewModel.HomeProductVM
@using PagedList.Mvc

<link rel="stylesheet" type="text/css" href="~/Content/myStyle/CustumerHome.css" />

@*hien thi danh sach san pham*@ 

@if (Model.NewProducts != null && Model.NewProducts.Any())
 {
        <section class="container-fluid listProduct">
            <h2>Sản phẩm mới</h2>
            <ul class="list-container">
                @foreach (var product in Model.NewProducts)
                 {
                    <li class="lproduct-item">
                        <div>
                            <a href="@Url.Action("ProductDetails", "Home", new {id = product.ProductID})">
                               <img src="@Html.DisplayFor(modelItem => product.ProductImage)"/>
                            </a>
                        </div>
                        <div>
                            <p class="prodPrice">@product.ProductPrice </p>
                            <p lass="prodName">@product.ProductName </p>
                            <p class="prodSale">ĐÃ bán:&nbsp;@product.OrderDetails.Count </p>
                        </div>
                    </li>
                 }
            </ul>
        </section>

    @*hien thi trang*@
    <dix class="pagination-container">
        @Html.PagedListPager(Model.NewProducts, page => Url.Action("Index", new
    {
        page, searchTerm = Model.SearchTerm
    }))
</dix>
}
else{
<p>Không tìm được sản phẩm nào phù hợp</p>}
