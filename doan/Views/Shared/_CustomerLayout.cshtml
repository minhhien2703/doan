<style type="text/css">
    html {
        font-size: 15px;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }

    body {
        background-color: white;
    }

    #container {
        border: 1px solid #000000;
        border-radius: 15px;
    }

    header {
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .header-logo img {
        height: 50px;
    }

    section {
        background-color: white;
        min-height: 300px;
    }
    .navbar-nav li {
        margin-right: 15px; /* Adjust the spacing as needed */
    }

    /* Basic Reset */
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: Arial, sans-serif;
    }

    /* Navigation Bar Container */
    .navbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: #f8f8f8;
        padding: 10px 50px;
        border-bottom: 1px solid #ddd;
    }

        /* Logo */
        .navbar .logo img {
            height: 40px;
        }

        /* Search Bar */
        .navbar .search-bar {
            display: flex;
            flex: 1;
       
        }

    .search-bar input[type="text"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px 0 0 4px;
    }

    .search-bar button {
        padding: 8px 16px;
        background-color: #0073e6;
        color: white;
        border: none;
        border-radius: 0 4px 4px 0;
        cursor: pointer;
    }

    /* Right-side icons and links */
    .navbar .right-icons {
        display: flex;
        align-items: center;
    }

    .right-icons .icon {
        display: flex;
        align-items: center;
        margin-left: 20px;
        color: #333;
        text-decoration: none;
    }

        .right-icons .icon i {
            font-size: 18px;
            margin-right: 5px;
        }

    /* Badge for Cart */
    .cart-badge {
        position: relative;
    }

        .cart-badge .badge {
            position: absolute;
            top: -5px;
            right: -10px;
            background-color: red;
            color: white;
            font-size: 12px;
            padding: 2px 5px;
            border-radius: 50%;
        }

</style>
