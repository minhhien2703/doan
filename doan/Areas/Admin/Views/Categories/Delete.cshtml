@model doan.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2>XÓA DANH MỤC </h2>




    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
            <div class="form-horizontal">
               
                <div class="form-group">
                    <div class=" col-md-offset-1 col-md-8">

                        <h4> Bạn muốn thực sự xóa danh mục này?  </h4>
                    </div>
                 </div>
                       




                <div class="form-group">
                    <div class="control-label col-md-2"> Tên danh mục</div>
                    <div class="col-md-10">

                        @Html.DisplayFor(model => model.CategoryName)
                    </div>



                    <div class="form-group">
                        <div class=" col-md-offset-1 col-md-8">
                            <input type="submit" value="Xóa" class="btn btn-primary btn-sm" /> |
                            @Html.ActionLink("Back", "Index", new { id = Model.CategoryID }, new { @class = "btn btn-primary btn-sm" }) |
                        </div>

                    </div>
                </div>


            </div>
              
      }


